<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.restaurant_reservation_system">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"
                     android:usesCleartextTraffic="true"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            android:hardwareAccelerated="false">
        <activity
                android:name="com.restaurant_reservation_system.controllers.LaunchActivity"
                android:theme="@style/AppTheme.launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.restaurant_reservation_system.controllers.LoginActivity"
                android:theme="@style/AppTheme.login"
                android:windowSoftInputMode="stateHidden" />
        <activity
                android:name="com.restaurant_reservation_system.controllers.AdminMainActivity"
                android:theme="@style/AppTheme.login"
                android:windowSoftInputMode="stateHidden" />
        <activity
                android:name="com.restaurant_reservation_system.controllers.RegisterActivity"
                android:theme="@style/AppTheme.login"
                android:windowSoftInputMode="stateHidden" />

        <activity
                android:name="com.restaurant_reservation_system.controllers.TImeTableActivity"
                android:theme="@style/AppTheme.main"
                android:windowSoftInputMode="stateHidden" />

        <activity
                android:name="com.restaurant_reservation_system.controllers.EditActivity"
                android:theme="@style/AppTheme.main"
                android:windowSoftInputMode="stateHidden" />

        <activity
                android:name="com.restaurant_reservation_system.controllers.AddActivity"
                android:theme="@style/AppTheme.main"
                android:windowSoftInputMode="stateHidden" />

        <activity
                android:name="com.restaurant_reservation_system.controllers.MainActivity"
                android:theme="@style/AppTheme.main"
                android:windowSoftInputMode="stateHidden" />
        <activity
                android:name="com.restaurant_reservation_system.controllers.ListActivity"
                android:theme="@style/AppTheme.main"
                android:windowSoftInputMode="stateHidden" />
        <activity
                android:name="com.restaurant_reservation_system.controllers.StaticisActivity"
                android:theme="@style/AppTheme.main"
                android:windowSoftInputMode="stateHidden" />
        <activity
                android:name="com.restaurant_reservation_system.controllers.OnSiteReservationActivity"
                android:theme="@style/AppTheme.main"
                android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>