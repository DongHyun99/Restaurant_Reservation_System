<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:orientation="vertical"
        android:gravity="bottom"
        tools:context=".controllers.MainActivity">

        <com.github.tlaabs.timetableview.TimetableView
                android:id="@+id/timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:header_title="@array/my_header_title"
                app:column_count="4"
                app:row_count="12"
                tools:ignore="MissingConstraints"
                app:header_highlight_type="color" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:layout_marginBottom="30dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryBlue"
                android:textColor="@color/colorInverted"
                android:text="Add"/>

    </LinearLayout>





</LinearLayout>
