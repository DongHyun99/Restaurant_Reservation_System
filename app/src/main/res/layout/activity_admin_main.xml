<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/admin_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

            <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/containerTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_marginBottom="10dp">

                    <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Restaurant Reservation App"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-condensed-medium"/>
                    <ImageView
                            android:src="@drawable/logo1"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:id="@+id/imageView"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="110dp"/>

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/containerReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                >

                    <ImageView
                            android:layout_width="85dp"
                            android:layout_height="65dp"
                            android:src="@drawable/calendar"
                            android:paddingTop="1dp"
                            android:paddingRight="15dp"
                    />
                    <Button
                            android:id="@+id/book_btn"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@color/primaryBlue"
                            android:text="현장예약"
                            android:textSize="18sp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/colorInverted"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/containerArriveTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                >

                    <ImageView
                            android:layout_width="85dp"
                            android:layout_height="63dp"
                            android:src="@drawable/noshowlist"
                            android:paddingTop="1dp"
                            android:paddingRight="15dp"/>
                    <Button
                            android:id="@+id/btnArriveTime"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@color/primaryBlue"
                            android:text="노쇼 리스트"
                            android:textSize="18sp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/colorInverted"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/containerStatistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp">

                    <ImageView
                            android:layout_width="85dp"
                            android:layout_height="63dp"
                            android:src="@drawable/statistics"
                            android:paddingTop="1dp"
                            android:paddingRight="15dp"/>
                    <Button
                            android:id="@+id/btnStatistics"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@color/primaryBlue"
                            android:text="통계"
                            android:textSize="18sp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/colorInverted"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/containerArrivalList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp">

                    <ImageView
                            android:layout_width="85dp"
                            android:layout_height="63dp"
                            android:src="@drawable/waitinglist"
                            android:paddingTop="1dp"
                            android:paddingRight="15dp"/>
                    <Button
                            android:id="@+id/ArrivalList_btn"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@color/primaryBlue"
                            android:text="도착기록리스트"
                            android:textSize="18sp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/colorInverted"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/containerSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp">

                    <ImageView
                            android:layout_width="85dp"
                            android:layout_height="63dp"
                            android:src="@drawable/setting"
                            android:paddingTop="1dp"
                            android:paddingRight="15dp"/>
                    <Button
                            android:id="@+id/btnSetting"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@color/primaryBlue"
                            android:text="환경설정"
                            android:textSize="18sp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/colorInverted"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <include layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>